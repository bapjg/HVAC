<?xml version		= "1.0" encoding			= "utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AD_Linear_Top"
    android:layout_width="wrap_content"
    android:layout_height="match_parent" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/aa_include_panel_title_section" />

    <LinearLayout
        android:layout_width					= "match_parent"
        android:layout_height					= "match_parent"
        android:background						= "@color/background"
        android:orientation						= "vertical" 
	>
	    <LinearLayout
	        android:id							= "@+id/gradient"
	        android:layout_width				= "match_parent"
	        android:layout_height				= "wrap_content" 
	    	android:orientation					= "vertical"
		>
	
	        <TextView
	            style="@style/AD_Text"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:gravity="left"
	            android:text="Temperature Gradient" />
	
	        <GridLayout
	            android:layout_width			= "match_parent"
	            android:layout_height			= "wrap_content" 
	            android:orientation				= "horizontal"
	            android:columnCount				= "4"
	            android:rowCount				= "4"
			>
		        <TextView
		            android:id					= "@+id/tempLow"
		            style						= "@style/AD_Data"
		            android:layout_row			= "0"
		            android:layout_column		= "0"
		            android:gravity				= "right|center_vertical"
		            android:text				= "gt1"
				/>
		        <TextView
		            style						= "@style/AD_Data"
		            android:layout_row			= "1"
		            android:layout_column		= "0"
		            android:gravity				= "right|center_vertical"
		            android:text				= "T°"
				/>
		        <TextView
		            android:id					= "@+id/outsideLow"
		            style						= "@style/AD_Data"
		            android:layout_row			= "2"
		            android:layout_column		= "0"
		            android:gravity				= "right|center_vertical"
		            android:text				= "gt3"
				/>
				<TextView
				    android:id					= "@+id/outsideHighIsh"
				    style						= "@style/AD_Data"
				    android:layout_column		= "1"
				    android:layout_row			= "3"
				    android:text				= "gt2"
				/>
		        <TextView
				    style						= "@style/AD_Data"
				    android:layout_column		= "2"
				    android:layout_row			= "3"
				    android:text				= "OutSide T°"
				/>
				<TextView
				    android:id					= "@+id/outsideHigh"
				    style						= "@style/AD_Data"
				    android:layout_column		= "3"
				    android:layout_row			= "3"
				    android:text				= "gt5"
				/>
				<ImageView
				    android:id					= "@+id/imageView1"
				    android:layout_width		= "180dp"
				    android:layout_height		= "110dp"
				    android:layout_column		= "1"
				    android:layout_columnSpan	= "3"
				    android:layout_gravity		= "left"
				    android:layout_row			= "0"
				    android:layout_rowSpan		= "3"
				    android:src					= "@drawable/gradient"
				/>
												
				
			</GridLayout>
	    </LinearLayout>
	    <LinearLayout
	        android:id							= "@+id/mixer"
	        android:layout_width				= "match_parent"
	        android:layout_height				= "wrap_content" 
	    	android:orientation					= "vertical"
		>
	
	         <LinearLayout
	             android:id						= "@+id/LinearLayout05"
	             android:layout_width			= "wrap_content"
	             android:layout_height			= "wrap_content"
	             android:orientation			= "horizontal"
			>
	         </LinearLayout>
	
	         <LinearLayout
	             android:id						= "@+id/LinearLayout03"
	             android:layout_width			= "wrap_content"
	             android:layout_height			= "wrap_content"
	             android:orientation			= "horizontal"
			>
	
	         </LinearLayout>
	
	         <LinearLayout
	             android:id						= "@+id/LinearLayout04"
	             android:layout_width			= "wrap_content"
	             android:layout_height			= "wrap_content"
	             android:orientation			= "horizontal"
			>
			</LinearLayout>
			<LinearLayout
	             android:layout_width			= "wrap_content"
	             android:layout_height			= "wrap_content"
	             android:orientation			= "horizontal"
			>
	         </LinearLayout>
	    </LinearLayout>
		<LinearLayout
		    android:id							= "@+id/pidMixer"
		    android:layout_width				= "match_parent"
		    android:layout_height				= "wrap_content"
		    android:orientation					= "vertical"
		>
		    <LinearLayout
		        android:id						= "@+id/LinearLayout07"
		        android:layout_width			= "wrap_content"
		        android:layout_height			= "wrap_content"
		        android:orientation				= "horizontal"
			>
		    </LinearLayout>
		    <LinearLayout
		        android:id						= "@+id/LinearLayout06"
		        android:layout_width			= "wrap_content"
		        android:layout_height			= "wrap_content"
		        android:orientation				= "horizontal"
			>
		    </LinearLayout>
		    <LinearLayout
		        android:id						= "@+id/LinearLayout09"
		        android:layout_width			= "wrap_content"
		        android:layout_height			= "wrap_content"
		        android:orientation				= "horizontal"
			>
		    </LinearLayout>
		    <LinearLayout
		        android:layout_width			= "wrap_content"
		        android:layout_height			= "wrap_content"
		        android:orientation				= "horizontal"
			>
		    </LinearLayout>
			<LinearLayout
		        android:layout_width			= "wrap_content"
		        android:layout_height			= "wrap_content"
		        android:orientation				= "horizontal"
			>
		    </LinearLayout>
		    <LinearLayout
		        android:layout_width			= "wrap_content"
		        android:layout_height			= "wrap_content"
		        android:orientation				= "horizontal"
			>
		    </LinearLayout>
		    <LinearLayout
		        android:layout_width			= "wrap_content"
		        android:layout_height			= "wrap_content"
		        android:orientation				= "horizontal"
			>
		    </LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>