<RelativeLayout 
    android:id="@+id/info"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" 
>

    <Button
        android:id="@+id/buttonTemperatures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperatures"
        android:width="200dp" 
    />
    <Button
        android:id="@+id/buttonCalendars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonTemperatures"
        android:layout_below="@+id/buttonTemperatures"
        android:text="Calendars"
        android:width="200dp" 
    />
    <Button
        android:id="@+id/buttonParameters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonTemperatures"
        android:layout_below="@+id/buttonCalendars"
        android:text="Parameters"
        android:width="200dp"
    />

    <TextView
        android:id="@+id/left1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_toRightOf="@+id/buttonTemperatures"
        android:text="Date Time"
        android:width="300dp"
    />           
    <TextView
        android:id="@+id/left2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/left1"
        android:text="Boiler"
        android:width="300dp"
    />           
    <TextView
        android:id="@+id/left3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/left2"
         android:text="Hot Water"
        android:width="300dp"
    />           
    <TextView
        android:id="@+id/left4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/left3"
        android:text="Outside"
        android:width="300dp"
    />           
    
    <TextView
        android:id="@+id/right1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/left1"
        android:ems="10"
    />           
    <TextView
        android:id="@+id/right2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/left1"
        android:layout_below="@+id/right1"
        android:ems="10"
    />           
    <TextView
        android:id="@+id/right3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/left1"
        android:layout_below="@+id/right2"
        android:ems="10"
    />           
    <TextView
        android:id="@+id/right4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/left1"
        android:layout_below="@+id/right3"
    />           
</RelativeLayout>