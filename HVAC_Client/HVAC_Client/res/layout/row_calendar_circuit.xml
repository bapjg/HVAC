<?xml version= "1.0" encoding= "utf-8"?>
<LinearLayout 
    xmlns:android					="http://schemas.android.com/apk/res/android"
    android:id						= "@+id/row"
    android:layout_width			= "match_parent"
    android:layout_height			= "wrap_content"
    android:gravity					= "center_vertical"
    android:orientation				= "vertical"
  >
     <LinearLayout 
    	android:layout_width	 	= "match_parent"
    	android:layout_height	 	= "30dp"
    	android:orientation		 	= "horizontal"
	>
	   	<TextView
	        android:id				= "@+id/name"
	        style					= "@style/AD_Text"
	    	android:layout_width	= "140dp"
	   	/>
         	<TextView
        	android:id			 	= "@+id/day_1"
        	android:text		 	= "1"
        	style				 	= "@style/AD_Text"
    		android:layout_width 	= "20dp"
   		/>                       	  
    	   	<TextView            	  
        	android:id			 	= "@+id/day_2"
 	      	android:text		 	= "2"
        	style				 	= "@style/AD_Text"
    		android:layout_width 	= "20dp"
   		/>                       	  
    	   	<TextView            	  
        	android:id			 	= "@+id/day_3"
	       	android:text		 	= "3"
        	style				 	= "@style/AD_Text"
    		android:layout_width 	= "20dp"
   		/>
    	<TextView
        	android:id			 	= "@+id/day_4"
			android:text		 	= "4"
        	style				 	= "@style/AD_Text"
    		android:layout_width 	= "20dp"
   		/>                       	  
    	<TextView                	  
        	android:id			 	= "@+id/day_5"
 	       	android:text		 	= "5"
			style				 	= "@style/AD_Text"
    		android:layout_width 	= "20dp"
   		/>                       	  
    	<TextView                	  
        	android:id			 	= "@+id/empty"
 	       	android:text		 	= ""
			style				 	= "@style/AD_Text"
    		android:layout_width 	= "20dp"
   		/>                         
    	<TextView                  
        	android:id			 	= "@+id/day_6"
 	       	android:text		 	= "6"
			style				 	= "@style/AD_Text"
    		android:layout_width 	= "20dp"
   		/>                       	
    	<TextView                	
        	android:id			 	= "@+id/day_7"
  	       	android:text		 	= "7"
			style				 	= "@style/AD_Text"
    		android:layout_width 	= "10dp"
   		/>
    	   	   	   	
    </LinearLayout>
    <LinearLayout 
	    android:layout_width		= "match_parent"
	    android:layout_height		= "wrap_content"
	    android:orientation			= "horizontal"
	>
		<TextView
	        android:id				= "@+id/name"
	        style					= "@style/AD_Text"
       		android:text			= "Name"
	    	android:layout_width	= "140dp"/>
		<TextView
	        android:id				= "@+id/days"
	        style					= "@style/AD_Text"
	    	android:layout_width	= "60dp"/>
        	android:text			= "Days"
		<TextView
	        android:id				= "@+id/tempObjective"
	        style					= "@style/AD_Text"
        	android:text			= "Temp Objective"
	    	android:layout_width	= "60dp"/>
	   	   
	    
	</LinearLayout>
   	<LinearLayout 
	    android:layout_width		= "match_parent"
	    android:layout_height		= "wrap_content"
	    android:orientation			= "horizontal"
	>
	    <TextView
	        android:id				= "@+id/timeStart"
	        style					= "@style/AD_Text"
        	android:text			= "Start"
	    	android:layout_width	= "40dp"/>
	    <TextView
	        android:id				= "@+id/timeEnd"
	        style					= "@style/AD_Text"
        	android:text			= "End"
	    	android:layout_width	= "80dp"/>
	    <CheckBox 
	        android:id				= "@+id/stopOnObjective"
	        android:layout_width	= "100dp"
	        android:layout_height	= "wrap_content"
	        android:text			= "Stop On Obj"
	    />
	    
	</LinearLayout>
</LinearLayout>