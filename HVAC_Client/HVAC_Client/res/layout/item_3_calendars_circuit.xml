<?xml version		= "1.0" encoding		= "utf-8"?>
<LinearLayout 
	xmlns:android							= "http://schemas.android.com/apk/res/android"
    android:layout_width					= "match_parent"
    android:layout_height					= "match_parent"
    android:background						= "@color/background"
    android:baselineAligned					= "false"
    android:orientation						= "vertical"
>

    <LinearLayout
        android:layout_width				= "match_parent"
        android:layout_height				= "60dp"
        android:background					= "@color/background"
        android:gravity						= "top"
        android:orientation					= "vertical" 
	>

        <TextView
            style							= "@style/AD_Text"
            android:id						= "@+id/title"
            android:layout_width			= "match_parent"
            android:layout_height			= "25dp"
       		android:gravity					= "center_horizontal"
            android:text					= "Calendar" 
       
		/>

        <TextView
            style							= "@style/AD_Data"
            android:id						= "@+id/subTitle"
            android:layout_width			= "match_parent"
            android:layout_height			= "25dp"
        	android:gravity					= "center_horizontal"
            android:text					= "" 
       
		/>
   		<View
             android:layout_width			= "fill_parent"
             android:layout_height			= "5dp"
             android:background				= "@color/background"
       
		/>
        <View
             android:layout_width			= "fill_parent"
             android:layout_height			= "2dp"
             android:background				= "#3399FF"
       
		/>
    </LinearLayout>
    <TextView
        android:id							= "@+id/days"
        style								= "@style/AD_Text"
        android:layout_width				= "match_parent"
        android:layout_height				= "50dp"
        android:gravity						= "center_horizontal"
        android:layout_gravity				= "center_horizontal"
	/>                          			
    <LinearLayout
        android:id							= "@+id/daySlots"
        android:layout_width				= "match_parent"
        android:layout_height				= "50dp"
        android:orientation					= "horizontal"
	>                           			
	    <TextView android:id				= "@+id/day_1" android:text	= "1" android:gravity	= "center_horizontal|center_vertical" style	= "@style/AD_Text" android:layout_width	= "40dp" android:layout_height	= "match_parent"/>
	    <TextView android:id				= "@+id/day_2" android:text	= "2" android:gravity	= "center_horizontal|center_vertical" style	= "@style/AD_Text" android:layout_width	= "40dp" android:layout_height	= "match_parent"/>
	    <TextView android:id				= "@+id/day_3" android:text	= "3" android:gravity	= "center_horizontal|center_vertical" style	= "@style/AD_Text" android:layout_width	= "40dp" android:layout_height	= "match_parent"/>
	    <TextView android:id				= "@+id/day_4" android:text	= "4" android:gravity	= "center_horizontal|center_vertical" style	= "@style/AD_Text" android:layout_width	= "40dp" android:layout_height	= "match_parent"/>
	    <TextView android:id				= "@+id/day_5" android:text	= "5" android:gravity	= "center_horizontal|center_vertical" style	= "@style/AD_Text" android:layout_width	= "40dp" android:layout_height	= "match_parent"/>
	    <TextView android:id				= "@+id/empty" android:text	= "" 														  style	= "@style/AD_Text" android:layout_width	= "20dp" />
	    <TextView android:id				= "@+id/day_6" android:text	= "6" android:gravity	= "center_horizontal|center_vertical" style	= "@style/AD_Text" android:layout_width	= "40dp" android:layout_height	= "match_parent"/>
	    <TextView android:id				= "@+id/day_7" android:text	= "7" android:gravity	= "center_horizontal|center_vertical" style	= "@style/AD_Text" android:layout_width	= "40dp" android:layout_height	= "match_parent"/>
    </LinearLayout>             			
    <LinearLayout
        android:id							= "@+id/LinearLayout01"
        android:layout_width				= "wrap_content"
        android:layout_height				= "50dp"
        android:gravity						= "center_vertical"
	>                           			
        <TextView
            style							= "@style/AD_Text"
            android:layout_width			= "200dp"
            android:gravity					= "left"
            android:text					= "Time Start"
		/>                          		
        <TextView
            android:id						= "@+id/timeStart"
            style							= "@style/AD_Data"
            android:layout_width			= "100dp"
            android:gravity					= "right"
            android:text					= "Start"
		/>
    </LinearLayout>

    <LinearLayout
        android:id							= "@+id/LinearLayout02"
        android:layout_width				= "wrap_content"
        android:layout_height				= "50dp"
        android:gravity						= "center_vertical"
	>                           			

        <TextView
            style							= "@style/AD_Text"
            android:layout_width			= "200dp"
            android:gravity					= "left"
            android:text					= "Time End"
		/>                          		

        <TextView
            android:id						= "@+id/timeEnd"
            style							= "@style/AD_Data"
            android:layout_width			= "100dp"
            android:gravity					= "right"
            android:text					= "End"
		/>
    </LinearLayout>

    <LinearLayout
        android:id							= "@+id/xx"
        android:layout_width				= "wrap_content"
        android:layout_height				= "50dp"
        android:gravity						= "center_vertical"
	>                           			

        <TextView
            style							= "@style/AD_Text"
            android:layout_width			= "200dp"
            android:gravity					= "left"
            android:text					= "Temp Objective"
		/>                          		

        <TextView
            android:id						= "@+id/tempObjective"
            style							= "@style/AD_Data"
            android:layout_width			= "100dp"
            android:gravity					= "right"
            android:text					= "Temp"
		/>
    </LinearLayout>

    <LinearLayout
        android:id							= "@+id/ss"
        android:layout_width				= "296dp"
        android:layout_height				= "50dp"
        android:gravity						= "center_vertical"
	>                           			
                                			
        <TextView
            style							= "@style/AD_Text"
            android:layout_width			= "270dp"
            android:gravity					= "left"
            android:text					= "Stop On Objective"
		/>                      		

        <CheckBox
            android:id						= "@+id/stopOnObjective"
            android:layout_width			= "30dp"
            android:layout_height			= "50dp"
            android:layout_alignParentRight	= "true"
            android:layout_gravity			= "right"
		/>

    </LinearLayout>
	<include layout	= "@layout/aa_include_item_buttons_ok_delete" />
</LinearLayout>