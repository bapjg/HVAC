<?xml version= "1.0" encoding= "utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:gravity="center_vertical"
    android:orientation="vertical" >

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonDelete"
            style="@style/AD_Button"
            android:layout_width="200dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/button_delete"
            android:text="Delete"
            android:textColor="#00000000" />

        <Button
            android:id="@+id/buttonOk"
            style="@style/AD_Button"
            android:layout_width="100dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/button_ok"
            android:text="Ok"
            android:textColor="@color/Gray" />

    </LinearLayout>

    <TextView
        android:id="@+id/days"
        style="@style/AD_Text"
        android:layout_width="288dp"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:id="@+id/daySlots"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >
	    <TextView android:id="@+id/day_1" android:text="1" android:gravity="center_horizontal" style="@style/AD_Text" android:layout_width="30dp" />
	    <TextView android:id="@+id/day_2" android:text="2" android:gravity="center_horizontal" style="@style/AD_Text" android:layout_width="30dp" />
	    <TextView android:id="@+id/day_3" android:text="3" android:gravity="center_horizontal" style="@style/AD_Text" android:layout_width="30dp" />
	    <TextView android:id="@+id/day_4" android:text="4" android:gravity="center_horizontal" style="@style/AD_Text" android:layout_width="30dp" />
	    <TextView android:id="@+id/day_5" android:text="5" android:gravity="center_horizontal" style="@style/AD_Text" android:layout_width="30dp" />
	    <TextView android:id="@+id/empty" android:text="" style="@style/AD_Text" android:layout_width="20dp" />
	    <TextView android:id="@+id/day_6" android:text="6" android:gravity="center_horizontal" style="@style/AD_Text" android:layout_width="30dp" />
	    <TextView android:id="@+id/day_7" android:text="7" android:gravity="center_horizontal" style="@style/AD_Text" android:layout_width="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            style="@style/AD_Text"
            android:layout_width="200dp"
            android:gravity="left"
            android:text="Time Start" />

        <TextView
            android:id="@+id/timeStart"
            style="@style/AD_Data"
            android:layout_width="100dp"
            android:gravity="right"
            android:text="Start" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            style="@style/AD_Text"
            android:layout_width="200dp"
            android:gravity="left"
            android:text="Time End" />

        <TextView
            android:id="@+id/timeEnd"
            style="@style/AD_Data"
            android:layout_width="100dp"
            android:gravity="right"
            android:text="End" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/xx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            style="@style/AD_Text"
            android:layout_width="200dp"
            android:gravity="left"
            android:text="Temp Objective" />

        <TextView
            android:id="@+id/tempObjective"
            style="@style/AD_Data"
            android:layout_width="100dp"
            android:gravity="right"
            android:text="Temp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            style="@style/AD_Text"
            android:layout_width="200dp"
            android:gravity="left"
            android:text="Stop On Objective" />

        <CheckBox
            android:id="@+id/stopOnObjective"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right" />

    </LinearLayout>

</LinearLayout>