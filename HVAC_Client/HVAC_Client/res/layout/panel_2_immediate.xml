<?xml version		= "1.0" encoding		= "utf-8"?>
<LinearLayout 
    xmlns:android							= "http://schemas.android.com/apk/res/android"
    style									= "@style/AD_Linear_Top"
>
    <include 
        layout								= "@layout/aa_include_panel_title_section"
        android:id							= "@+id/title_layout"
    />
 
    <ScrollView 
	    style								= "@style/AD_Scroll"
	>
        <GridLayout
	    style								= "@style/AD_Grid"
	    android:columnCount					= "2"
        >
			<TextView		android:text	= "Planned calendar events" 	android:layout_width	= "match_parent" 	style					= "@style/AD_Title" 
			    			android:layout_columnSpan ="2"/>
			<TextView		android:text	= "Time Start"														style	= "@style/AD_Text" 	/>
			<TextView       android:text	= "X"				android:id	= "@+id/plannedTimeStart"			style	= "@style/AD_Data"	/>
			<TextView		android:text	= "Time End"														style	= "@style/AD_Text"  />
			<TextView		android:text	= " "				android:id	= "@+id/plannedTimeEnd"				style	= "@style/AD_Data"  />
			<TextView		android:text	= "Temperature"														style	= "@style/AD_Text"  />
			<TextView		android:text	= " "				android:id	= "@+id/plannedTargetTemp"			style	= "@style/AD_Data"  />
			<TextView		android:text	= "Stop On Objective"												style	= "@style/AD_Text"  />
			<CheckBox		android:text	= " "				android:id	= "@+id/plannedStopOnObjective"		style	= "@style/AD_Data"  />
				
			
			<TextView		android:text	= "Select new parameters" 	android:layout_width = "match_parent" 	style	= "@style/AD_Title" 
			    			android:layout_columnSpan ="2"/>
						
			<TextView		android:text	= "Time Start"														style	= "@style/AD_Text"  />
			<TextView		android:text	= " "				android:id	= "@+id/timeStart"					style	= "@style/AD_Data"  />
			<TextView		android:text	= "Time End"														style	= "@style/AD_Text"  />
			<TextView		android:text	= " "				android:id	= "@+id/timeEnd"					style	= "@style/AD_Data"  />
			<TextView		android:text	= "Temperature"														style	= "@style/AD_Text"  />
			<TextView		android:text	= " "				android:id	= "@+id/tempObjective"				style	= "@style/AD_Data"  />
			<TextView		android:text	= "Stop On Objective"												style	= "@style/AD_Text"  />
			<CheckBox		android:text	= " "				android:id	= "@+id/stopOnObjective"			style	= "@style/AD_Data"  />
						

			<Button
				android:id	= "@+id/buttonStartStop"
				android:layout_width	= "wrap_content"
				android:layout_height	= "wrap_content"
				android:layout_centerVertical	= "true"
				android:layout_gravity	= "center_horizontal"
				android:text	= "Ok"
				android:textColor	= "#FFFFFF"
				android:layout_columnSpan ="2"
			/>
		</GridLayout>
    </ScrollView>
</LinearLayout>