<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android					= "http://schemas.android.com/apk/res/android"
    android:id						= "@+id/row"
    android:layout_width			= "match_parent"
    android:layout_height			= "wrap_content"
    android:orientation				= "vertical"
>
     <LinearLayout 
    	android:layout_width	 	= "match_parent"
    	android:layout_height	 	= "30dp"
    	android:orientation		 	= "horizontal"
	>
	   	<TextView
	        android:id				= "@+id/name"
	        style					= "@style/AD_Text"
	    	android:layout_width	= "140dp"
	   	/>
         	<TextView
        	android:id			 	= "@+id/day_1"
        	android:text		 	= "1"
        	style				 	= "@style/AD_Text"
    		android:layout_width 	= "10dp"
   		/>                       	  
    	   	<TextView            	  
        	android:id			 	= "@+id/day_2"
 	      	android:text		 	= "2"
        	style				 	= "@style/AD_Text"
    		android:layout_width 	= "10dp"
   		/>                       	  
    	   	<TextView            	  
        	android:id			 	= "@+id/day_3"
	       	android:text		 	= "3"
        	style				 	= "@style/AD_Text"
    		android:layout_width 	= "10dp"
   		/>
    	<TextView
        	android:id			 	= "@+id/day_4"
			android:text		 	= "4"
        	style				 	= "@style/AD_Text"
    		android:layout_width 	= "10dp"
   		/>                       	  
    	<TextView                	  
        	android:id			 	= "@+id/day_5"
 	       	android:text		 	= "5"
			style				 	= "@style/AD_Text"
    		android:layout_width 	= "10dp"
   		/>                       	  
    	<TextView                	  
        	android:id			 	= "@+id/empty"
 	       	android:text		 	= ""
			style				 	= "@style/AD_Text"
    		android:layout_width 	= "10dp"
   		/>                         
    	<TextView                  
        	android:id			 	= "@+id/day_6"
 	       	android:text		 	= "6"
			style				 	= "@style/AD_Text"
    		android:layout_width 	= "10dp"
   		/>                       	
    	<TextView                	
        	android:id			 	= "@+id/day_7"
  	       	android:text		 	= "7"
			style				 	= "@style/AD_Text"
    		android:layout_width 	= "10dp"
   		/>
    	   	   	   	
    </LinearLayout>
</LinearLayout>