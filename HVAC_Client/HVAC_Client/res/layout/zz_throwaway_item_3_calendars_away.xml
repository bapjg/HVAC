<?xml version		= "1.0" encoding			= "utf-8"?>
<RelativeLayout 
    xmlns:android								= "http://schemas.android.com/apk/res/android"
    android:layout_width							= "match_parent"
    android:layout_height							= "match_parent"
    android:background								= "@color/background"
>
    <include layout								= "@layout/panel_0_base_title_section" />
    
	<LinearLayout android:orientation				= "vertical">  
    
		<LinearLayout 
		    android:orientation				= "horizontal"
		>
	        <TextView
	            style							= "@style/AD_Data"
	            android:layout_weight = "1"
	            android:gravity="center"
	            android:text					= "Start" 

			/>
	        <TextView 
	            style							= "@style/AD_Data"
	            android:layout_weight = "1"
	            android:gravity="center"
	            android:text					= "End" 

			/>
		</LinearLayout>
		<LinearLayout 
		    android:orientation				= "horizontal"
		>
		
			<TextView
		        android:id						= "@+id/dateStart"
	            android:layout_weight = "1"
	            android:gravity="center"
	            style							= "@style/AD_Data"
	    	/>                              	
		    <TextView
		        android:id						= "@+id/dateEnd"
 	            android:layout_weight = "1"
	            android:gravity="center"
	            style							= "@style/AD_Data"
	    	/>                          	
		</LinearLayout>
		<LinearLayout 
		    android:orientation				= "horizontal"
		>
		    
		    <TextView
		        android:id				 		= "@+id/timeStart"
	            style							= "@style/AD_Data"
	            android:layout_weight = "1"
	            android:gravity="center"
	    	/>                           	
		    <TextView
		        android:id				 		= "@+id/timeEnd"
	            style							= "@style/AD_Data"
 	            android:layout_weight = "1"
	            android:gravity="center"
	    	/>                           	
	  	</LinearLayout> 
	</LinearLayout> 
  	<include layout	= "@layout/panel_0_include_buttons_ok_delete" />
</RelativeLayout>