<?xml version= "1.0" encoding					= "utf-8"?>
<LinearLayout 
    xmlns:android							= "http://schemas.android.com/apk/res/android"
    style									= "@style/AD_Linear_Top"
>		
	<LinearLayout		
        android:layout_width					= "match_parent"
        android:layout_height					= "60dp"
        android:background						= "@color/background"
        android:gravity							= "top"
        android:orientation						= "vertical" 
>		
        <TextView		
            style								= "@style/AD_Text"
            android:id							= "@+id/title"
            android:layout_width				= "match_parent"
            android:layout_height				= "25dp"
       		android:gravity						= "center_horizontal"
            android:text						= "Pump Configuration" 
		/>		
		<TextView		
            android:id							= "@+id/subTitle"
            style								= "@style/AD_Data"
            android:layout_width				= "match_parent"
            android:layout_height				= "25dp"
            android:gravity						= "center_horizontal"
		/>		
  		<View		
             android:layout_width				= "fill_parent"
             android:layout_height				= "5dp"
             android:background					= "@color/background"
			
		/>		
        <View		
             android:layout_width				= "fill_parent"
             android:layout_height				= "2dp"
             android:background					= "#3399FF"
		/>		
    </LinearLayout>		
    <LinearLayout		
 	    android:layout_width					= "match_parent"
	    android:layout_height					= "50dp"
    	android:gravity							= "center_vertical"
	    android:orientation						= "horizontal"
	>        		
        <TextView		
            style								= "@style/AD_Text"
            android:layout_width				= "150dp"
            android:gravity						= "left"
            android:text						= "Pump Name"
		/>		
       <TextView		
            android:id							= "@+id/pumpName"
            style								= "@style/AD_Data"
            android:layout_width				= "150dp"
            android:gravity						= "right"
		/>		
    </LinearLayout>		
    <LinearLayout		
 	    android:layout_width					= "match_parent"
	    android:layout_height					= "50dp"
    	android:gravity							= "center_vertical"
	    android:orientation						= "horizontal"
	>        		
        <TextView		
            style								= "@style/AD_Text"
            android:layout_width				= "150dp"
            android:gravity						= "left"
            android:text						= "Relay Name"
		/>		
        <TextView		
            android:id							= "@+id/relayName"
            style								= "@style/AD_Data"
            android:layout_width				= "150dp"
            android:gravity						= "right"
		/>		
    </LinearLayout>		
	<include layout	= "@layout/aa_include_item_buttons_ok_delete" />
</LinearLayout>