<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android						= "http://schemas.android.com/apk/res/android"
	android:layout_width				= "match_parent"
	android:layout_height				= "match_parent"
	android:orientation					= "vertical"
	android:baselineAligned				= "false"
	android:background					= "@color/background"
>
     <LinearLayout 
    	android:layout_width	 		= "match_parent"
    	android:layout_height	 		= "30dp"
    	android:orientation		 		= "horizontal"
	>
            <TextView	android:text	= "Relays"												style	= "@style/AD_Title"  />
    </LinearLayout>
     <LinearLayout 
    	android:layout_width	 		= "match_parent"
    	android:layout_height	 		= "30dp"
    	android:orientation		 		= "horizontal"
	>
            <TextView	android:text	= "Burner"  	android:layout_weight="0.60"			style	= "@style/AD_SwitchText"  />
 			<Switch 	android:text	= " "	    	android:id="@+id/burner"				style	= "@style/AD_Switch" />
    </LinearLayout>
     <LinearLayout 
    	android:layout_width	 		= "match_parent"
    	android:layout_height	 		= "30dp"
    	android:orientation		 		= "horizontal"
	>
            <TextView	android:text	= ""													style	= "@style/AD_SwitchText"  />
    </LinearLayout>
    <LinearLayout 
    	android:layout_width	 		= "match_parent"
    	android:layout_height	 		= "30dp"
    	android:orientation		 		= "horizontal"
	>
            <TextView	android:text	= "Hot Water"   android:layout_weight="0.60"			style	= "@style/AD_SwitchText"  />
  			<Switch		android:text	= " "			android:id	= "@+id/hotwater"			style	= "@style/AD_Switch"/>
   </LinearLayout>
     <LinearLayout 
    	android:layout_width	 		= "match_parent"
    	android:layout_height	 		= "30dp"
    	android:orientation		 		= "horizontal"
	>
            <TextView	android:text	= "Floor"     	android:layout_weight="0.60"			style	= "@style/AD_SwitchText"  />
 			<Switch		android:text	= " "			android:id	= "@+id/floor"				style	= "@style/AD_Switch"/>
   </LinearLayout>
   <LinearLayout 
    	android:layout_width	 		= "match_parent"
    	android:layout_height	 		= "30dp"
    	android:orientation		 		= "horizontal"
	>
            <TextView	android:text	= "Radiator"    android:layout_weight="0.60"			style	= "@style/AD_SwitchText"  />
 			<Switch		android:text	= " "			android:id	= "@+id/radiator"			style	= "@style/AD_Switch"/>
   </LinearLayout>
</LinearLayout>