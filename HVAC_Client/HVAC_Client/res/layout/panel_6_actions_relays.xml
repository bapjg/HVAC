	>
            <TextView	android:text	= ""													style	= "@style/AD_Text"  />
    </LinearLayout>
    <LinearLayout 
    	android:layout_width	 		= "match_parent"
    	android:layout_height	 		= "30dp"
    	android:orientation		 		= "horizontal"
	>
            <TextView	android:text	= "Hot Water"   style	= "@style/AD_Text"  android:layout_width="210dp" android:layout_gravity="center_vertical"/>
  			<Switch		android:text	= " "			android:id	= "@+id/hotwater"			style	= "@style/AD_Switch"/>
   </LinearLayout>
     <LinearLayout 
    	android:layout_width	 		= "match_parent"
    	android:layout_height	 		= "30dp"
    	android:orientation		 		= "horizontal"
	>
            <TextView	android:text	= "Floor"     	style	= "@style/AD_Text"  android:layout_width="210dp" android:layout_gravity="center_vertical"/>
 			<Switch		android:text	= " "			android:id	= "@+id/floor"				style	= "@style/AD_Switch"/>
   </LinearLayout>
   <LinearLayout 
    	android:layout_width	 		= "match_parent"
    	android:layout_height	 		= "30dp"
    	android:orientation		 		= "horizontal"
	>
            <TextView	android:text	= "Radiator"    style	= "@style/AD_Text"  android:layout_width="210dp" android:layout_gravity="center_vertical"/>
 			<Switch		android:text	= " "			android:id	= "@+id/radiator"			style	= "@style/AD_Switch"/>
   </LinearLayout>
</LinearLayout>