<?xml version		= "1.0" encoding		= "utf-8"?>
<LinearLayout 
	android:layout_width				= "match_parent"
	android:layout_height="match_parent" android:background="@color/background" android:baselineAligned="false" android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            style="@style/AD_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
       		android:gravity="center_horizontal"
            android:text="Configuration" />

        <TextView
            style="@style/AD_Data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        	android:gravity="center_horizontal"
            android:text="Burner" />
   		<View
             android:layout_width= "fill_parent"
             android:layout_height= "2dp"
             android:background= "#c0c0c0"/>

    	</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/AD_Text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Relay" />

        <TextView
            android:id="@+id/name"
            style="@style/AD_Data"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="name" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/AD_Text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Fuel Consumed (min)" />

        <TextView
            android:id="@+id/fuelConsumption"
            style="@style/AD_Data"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="x" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/AD_Text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Fuel Consumed (l)" />

        <TextView
            android:id="@+id/fuelConsumptionLitres"
            style="@style/AD_Data"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="y" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/AD_Text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Minutes per Litre" />

        <TextView
            android:id="@+id/minutesPerLitre"
            style="@style/AD_Data"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="z" />
    </LinearLayout>
</LinearLayout>