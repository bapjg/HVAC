<?xml version		= "1.0" encoding		= "utf-8"?>
<RelativeLayout 
    xmlns:android							= "http://schemas.android.com/apk/res/android"
    android:layout_width							= "match_parent"
    android:layout_height							= "match_parent"
    android:background								= "@color/background"
>
    <ScrollView
		android:layout_width				= "wrap_content"
		android:layout_height				= "wrap_content"
	    android:layout_alignParentTop		= "true"
	    android:layout_above				= "@+id/buttons_refresh"
	>
		<LinearLayout
		    android:layout_width			= "match_parent"
			android:layout_height			= "match_parent"
			android:orientation				= "vertical"
			android:id						= "@+id/buttons_container"
		>
		    <Button	style					= "@style/AD_MenuButton" 	android:text	= "Hot Water"    		/>
			<Button	style					= "@style/AD_MenuButton" 	android:text	= "Radiator"     		/>
			<Button	style					= "@style/AD_MenuButton" 	android:text	= "Floor"        		/>
			<Button	style					= "@style/AD_MenuButton" 	android:text	= "Vocabulary"   		/>
			<Button	style					= "@style/AD_MenuButton" 	android:text	= "Away List"   		/>
			<Button	style					= "@style/AD_MenuButton" 	android:text	= "Background\nTasks"   />
		</LinearLayout>
	</ScrollView>
	
	<LinearLayout
		android:layout_width				= "wrap_content"
	    android:layout_height				= "wrap_content"
	    android:layout_alignParentBottom	= "true"
	    android:orientation					= "vertical"
	    android:id							= "@id/buttons_refresh"
    >
		<Button style						= "@style/AD_MenuButton"	android:text	= "Update"				/>
		<Button style						= "@style/AD_MenuButton"	android:text	= "Refresh"				/>
	</LinearLayout>
    	
</RelativeLayout>