<?xml version		= "1.0" encoding			= "utf-8"?>
<LinearLayout xmlns:android						= "http://schemas.android.com/apk/res/android"
    android:layout_width						= "match_parent"
    android:layout_height						= "match_parent"
    android:background							= "@color/background"
    android:baselineAligned						= "false"
    android:orientation							= "vertical" >

    <include layout								= "@layout/aa_include_panel_title_section" />
    
    <TableLayout style							= "@style/AD_Table" >
        <TableRow style							= "@style/AD_Row" >
            <TextView
                style							= "@style/AD_Text"
                android:layout_weight			= "1"
                android:text					= "Name" 
            />
            <TextView
                style							= "@style/AD_Data"
                android:layout_weight			= "1"
                android:text					= "Gradient" 
            />
            <TextView
                style							= "@style/AD_Data"
                android:layout_weight			= "1"
                android:text					= "Mixer"
            />
        </TableRow>
    	<include layout							= "@layout/panel_0_list_section" />
    </TableLayout>
    
    <View style									= "@style/AD_ThinLine" />

</LinearLayout>