<?xml version= "1.0" encoding					= "utf-8"?>
<RelativeLayout 
    xmlns:android								= "http://schemas.android.com/apk/res/android"
    style										= "@style/AD_Linear_Top"
>                          				
    <include layout								= "@layout/panel_0_base_title_section" />

	<LinearLayout style						= "@style/AD_Linear_V_with_Buttons" >  

	    <GridLayout
	        style="@style/AD_Grid"
	        android:columnCount="2" >

	        <TextView
	            style							= "@style/AD_Text"
	            android:text					= "PID Name"
			/>
			<TextView
	            android:id						= "@+id/pidName"
	            style							= "@style/AD_Data"
			/>

	        <TextView
	            style="@style/AD_Text"
	            android:paddingBottom="10dp"
	            android:paddingTop="10dp"
	            android:text="Depth" />
	
	        <TextView
	            android:id					= "@+id/depth"
	            style						= "@style/AD_Data"
			/>
	        <TextView
	            style						= "@style/AD_Text"
	            android:text				= "Sample Increment"
			/>
	        <TextView
	            android:id					= "@+id/sampleIncrement"
	            style						= "@style/AD_Data"
			/>
    	</GridLayout>		
    </LinearLayout>	
    		
    <include layout							= "@layout/aa_include_item_buttons_ok_delete" />

</RelativeLayout>