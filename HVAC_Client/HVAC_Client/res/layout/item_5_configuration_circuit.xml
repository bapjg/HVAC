<?xml version		= "1.0" encoding				= "utf-8"?>
<LinearLayout 
    xmlns:android									= "http://schemas.android.com/apk/res/android"
    style											= "@style/AD_Linear_Top"
>
    <include layout									= "@layout/aa_include_panel_title_section" />

    <ScrollView 
	    style										= "@style/AD_Scroll"
	>
    
	    <LinearLayout
	        android:layout_width					= "match_parent"
	        android:layout_height					= "wrap_content"
	        android:background						= "@color/background"
	        android:orientation						= "vertical" 
		>
	        <GridLayout
	    		style								= "@style/AD_Grid"
	    		android:columnCount					= "2"
	    	>
		        <TextView
		            style							= "@style/AD_Grid_Title"
		            android:text					= "General"
	            />
	            <TextView
		            style							= "@style/AD_Text"
		            android:text					= "Pump"
				/>
		    	<TextView
		            android:id						= "@+id/pumpName"
		            style							= "@style/AD_Data"
				/>

		        <TextView
		            style							= "@style/AD_Text"
		            android:text					= "Thermometer"
	           
				/>
		        <TextView
		            android:id						= "@+id/thermometerName"
		            style							= "@style/AD_Data"
				/>
		    </GridLayout>
			<RelativeLayout
				android:id							= "@+id/gradient"
	        	android:layout_width				="fill_parent"
	        	android:layout_height				="wrap_content" 
	        >
		        <TextView
		            style							= "@style/AD_Data"
		            android:layout_width			= "match_parent"
		            android:gravity					= "center_horizontal"
		            android:text					= "Temperature Gradient"
		            android:id						= "@+id/gradientTitle"
				/>
		    
		        <ImageView
		            android:id						="@+id/imageView1"
		            android:layout_width			="@dimen/graph_width"
		            android:layout_height			="@dimen/graph_height"
		            android:layout_below			="@id/gradientTitle"
		            android:layout_centerHorizontal	="true"
					android:adjustViewBounds		="true"
					android:scaleType				="centerCrop"
		            android:src						="@drawable/gradient" />

		        <TextView
		            android:id						="@+id/tempLow"
		            style							="@style/AD_Data"
		            android:layout_width="80dp"
		            android:layout_height="wrap_content"
		            android:layout_alignTop="@id/imageView1"
		            android:layout_toLeftOf="@id/imageView1"
		            android:gravity="right|center_vertical"
		            android:text="gt1" />
		
		        <TextView
		            android:id						="@+id/tempHigh"
		            style							="@style/AD_Data"
		            android:layout_width="80dp"
		            android:layout_height="wrap_content"
		            android:layout_alignBottom="@id/imageView1"
		            android:layout_toLeftOf="@id/imageView1"
		            android:gravity="right|center_vertical"
		            android:text="gt2" />
		
		        <TextView
		            android:id						="@+id/outsideLow"
		            style							="@style/AD_Data"
		            android:layout_width="wrap_content"
		            android:layout_alignLeft="@id/imageView1"
		            android:layout_below="@id/imageView1"
		            android:gravity="left"
		            android:text="gt3" />
		
		        <TextView
		            android:id						="@+id/outsideHigh"
		            style						="@style/AD_Data"
		            android:layout_width="wrap_content"
		            android:layout_alignRight="@id/imageView1"
		            android:layout_below="@id/imageView1"
		            android:text="gt5"
		            android:width="60dp" />

		        <TextView
		            android:id						="@+id/TextView01"
		            style							="@style/AD_Data"
		            android:layout_width="match_parent"
		            android:layout_alignBaseline="@+id/outsideLow"
		            android:layout_alignBottom="@+id/outsideLow"
		            android:layout_alignParentLeft="true"
		            android:gravity="center_horizontal"
		            android:text="Outside" />

    		</RelativeLayout>
	        <GridLayout
	    		style								= "@style/AD_Grid"
	    		android:columnCount					= "2"
	    		android:id						="@+id/mixer"
	    	>
		        <TextView
		            style							= "@style/AD_Grid_Title"
		            android:text					= "Mixer"
	            />
	            <TextView
	                 style							= "@style/AD_Text"
	                 android:text					= "Thermometer"
				/>
	
	             <TextView
	                 android:id						="@+id/thermometer"
	                 style							="@style/AD_Data"
	                 android:text					="zz" />

	
	            <TextView
	                 style							= "@style/AD_Text"
	                 android:text					= "Swing Time"
				/>
	
	            <TextView
	                 android:id						= "@+id/swingTime"
	                 style							= "@style/AD_Data"
	                 android:text					= "zz"
				/>
		
		
	             <TextView
	                 style							= "@style/AD_Text"
	                 android:text					= "Relay Up"
				/>
	
	            <TextView
	                 android:id						= "@+id/relayUp"
	                 style							= "@style/AD_Data"
	                 android:text					= "zz"
				/>
	
	             <TextView
	                 style							= "@style/AD_Text"
	                 android:text					= "Relay Down"
				/>
	
	             <TextView
	                 android:id						= "@+id/relayDown"
	                 style							= "@style/AD_Data"
	                 android:text					= "zz"
				/>

		    </GridLayout>
			<GridLayout
			    android:id							= "@+id/pidMixer"
			    style								= "@style/AD_Grid"
	    		android:columnCount					= "2"
			>
			    <TextView
			        style							= "@style/AD_Grid_Title"
			        android:text					= "Low Level PID (Mixer)"
				/>
		        <TextView
		            style						= "@style/AD_Text"
		            android:text				= "Thermometer"
				/>
		        <TextView
		            android:id					= "@+id/thermoName"
		            style						= "@style/AD_Data"
		            android:text				= "zz"
				/>


		        <TextView
		            style						= "@style/AD_Text"
		            android:text				= "Proportional Gain"
				/>
		        <TextView
		            android:id					= "@+id/gainP"
		            style						= "@style/AD_Data"
		            android:text				= "zz"
				/>

		        <TextView
		            style						= "@style/AD_Text"
		            android:text				= "Differential Time Const"
				/>
	
		        <TextView
		            android:id					= "@+id/timeD"
		            style						= "@style/AD_Data"
		            android:text				= "zz"
				/>


				<TextView
		            style						= "@style/AD_Text"
		            android:text				= "Integration Time Const"
				/>
	
		        <TextView
		            android:id					= "@+id/timeI"
		            style						= "@style/AD_Data"
		            android:text				= "zz"
				/>

	
		        <TextView
		            style						= "@style/AD_Text"
		            android:text				= "Time Delay after decision"
				/>
	
		        <TextView
		            android:id					= "@+id/timeDelay"
		            style						= "@style/AD_Data"
		            android:text				= "zz"
				/>
	
		        <TextView
		            style						= "@style/AD_Text"
		            android:text				= "Decision Time Projection"
				/>
	
		        <TextView
		            android:id					= "@+id/timeProjection"
		            style						= "@style/AD_Data"
		            android:text				= "zz"
				/>

	
		        <TextView
		            style						= "@style/AD_Text"
		            android:text				= "Tmperature Error Margin"
				/>
	
		        <TextView
		            android:id					= "@+id/marginProjection"
		            style						= "@style/AD_Data"
		            android:text				= "zz"
				/>
			</GridLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>