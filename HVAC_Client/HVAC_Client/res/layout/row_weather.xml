<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android					= "http://schemas.android.com/apk/res/android"
    android:layout_width			= "match_parent"
    android:layout_height			= "wrap_content"
    android:orientation				= "vertical"
   >	                              
	<LinearLayout 	                  
		android:layout_width		= "match_parent"
		android:layout_height		= "wrap_content"
		android:orientation			= "horizontal"
	>	                              
	   <TextView	                  
			android:id				= "@+id/time"
			style					= "@style/AD_Text"
			android:layout_width	= "60dp"
		/>
		<TextView	                  
			android:id				= "@+id/temperature"
			style					= "@style/AD_Data" 
			android:layout_width	= "40dp"
		/>
		<TextView	                  
			style					= "@style/AD_Text" 
			android:text			= "°   Min/Max"
			android:layout_width	= "40dp"
		/>
		<TextView	                  
			android:id				= "@+id/temperatureMinMax"
			style					= "@style/AD_Data" 
			android:layout_width	= "40dp"
		/>
	</LinearLayout>
	
	<LinearLayout 	                  
		android:layout_width		= "match_parent"
		android:layout_height		= "wrap_content"
		android:orientation			= "horizontal"
	>	                              
	   <TextView	                  
			style					= "@style/AD_Text"
			android:layout_width	= "60dp"
			android:text			= "Precipitation"
		/>
		<TextView	                  
			android:id				= "@+id/precipitationValue"
			style					= "@style/AD_Data" 
			android:layout_width	= "40dp"
		/>
		<TextView	                  
			android:id				= "@+id/precipitationType"
			style					= "@style/AD_Text" 
			android:text			= "°   Min/Max"
			android:layout_width	= "40dp"
		/>

	</LinearLayout>

	<LinearLayout 	                  
		android:layout_width		= "match_parent"
		android:layout_height		= "wrap_content"
		android:orientation			= "horizontal"
	>	                              
	   <TextView	                  
			style					= "@style/AD_Text"
			android:layout_width	= "60dp"
			android:text			= "Wind"
		/>
		<TextView	                  
			android:id				= "@+id/windSpeed"
			style					= "@style/AD_Data" 
			android:layout_width	= "40dp"
		/>
		<TextView	                  
			android:id				= "@+id/windName"
			style					= "@style/AD_Text" 
			android:layout_width	= "40dp"
		/>
		<TextView	                  
			android:id				= "@+id/windDirection"
			style					= "@style/AD_Text" 
			android:layout_width	= "40dp"
		/>

	</LinearLayout>

	<LinearLayout 	                  
		android:layout_width		= "match_parent"
		android:layout_height		= "wrap_content"
		android:orientation			= "horizontal"
	>	                              
	   <TextView	                  
			style					= "@style/AD_Text"
			android:layout_width	= "70dp"
			android:text			= "Clouds"
		/>
		<TextView	                  
			android:id				= "@+id/cloudValue"
			style					= "@style/AD_Data" 
			android:layout_width	= "40dp"
		/>
		<TextView	                  
			android:id				= "@+id/cloudAll"
			style					= "@style/AD_Text" 
			android:layout_width	= "40dp"
		/>

	</LinearLayout>

</LinearLayout>