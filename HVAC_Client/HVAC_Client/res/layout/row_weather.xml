<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id						= "@+id/row"
    android:layout_width			= "match_parent"
    android:layout_height			= "300dp"
    android:gravity					= "center_vertical"
    android:orientation				= "vertical" >
	                              
	<LinearLayout 	                  
		android:layout_width		= "match_parent"
		android:layout_height		= "wrap_content"
		android:orientation			= "horizontal"
	>	                              
	   <TextView	                  
			android:text			= "Forecast"
			style					= "@style/AD_Text"
			android:layout_width	= "120sp"
		/>
	   <TextView	                  
			android:id				= "@+id/time"
			style					= "@style/AD_Text"
			android:layout_width	= "220sp"
		/>

	</LinearLayout>
    	<LinearLayout 	                  
		android:layout_width		= "match_parent"
		android:layout_height		= "wrap_content"
		android:orientation			= "horizontal"
	>	                              
	   <TextView	                  
			android:text			= "Temperature"
			style					= "@style/AD_Text"
			android:layout_width	= "120sp"
		/>
		<TextView	                  
			android:id				= "@+id/temperature"
			style					= "@style/AD_Data" 
			android:layout_width	= "50sp"
		/>
		<TextView	                  
			style					= "@style/AD_Text" 
			android:text			= "Â°C"
			android:layout_width	= "40sp"
		/>

		<TextView
		    style="@style/AD_Text"
		    android:layout_width="wrap_content"
		    android:text="Min/Max" />

		<TextView
		    android:id="@+id/temperatureMinMax"
		    style="@style/AD_Data"
		    android:layout_width="match_parent" />

	</LinearLayout>
	
	<LinearLayout 	                  
		android:layout_width		= "match_parent"
		android:layout_height		= "wrap_content"
		android:orientation			= "horizontal"
	>	                              
	   <TextView	                  
			style					= "@style/AD_Text"
			android:layout_width	= "100dp"
			android:text			= "Precipitation"
		/>
		<TextView	                  
			android:id				= "@+id/precipitationValue"
			style					= "@style/AD_Data" 
			android:layout_width	= "30sp"
		/>
		<TextView	                  
			android:id				= "@+id/precipitationType"
			style					= "@style/AD_Text" 
			android:text			= ""
			android:layout_width	= "120sp"
		/>

	</LinearLayout>

	<LinearLayout 	                  
		android:layout_width		= "match_parent"
		android:layout_height		= "wrap_content"
		android:orientation			= "horizontal"
	>	                              
	   <TextView	                  
			style					= "@style/AD_Text"
			android:layout_width	= "100dp"
			android:text			= "Wind"
		/>
		<TextView	                  
			android:id				= "@+id/windSpeed"
			style					= "@style/AD_Data" 
			android:layout_width	= "30sp"
		/>
		<TextView	                  
			style					= "@style/AD_Text" 
			android:text			= "m/s"
			android:layout_width	= "40sp"
		/>
		<TextView	                  
			android:id				= "@+id/windDirection"
			style					= "@style/AD_Text" 
			android:layout_width	= "50sp"
		/>

		<TextView
		    android:id="@+id/windName"
		    style="@style/AD_Text"
		    android:layout_width="match_parent" />

	</LinearLayout>

	<LinearLayout 	                  
		android:layout_width		= "match_parent"
		android:layout_height		= "wrap_content"
		android:orientation			= "horizontal"
	>	                              
	   <TextView	                  
			style					= "@style/AD_Text"
			android:layout_width	= "100dp"
			android:text			= "Clouds"
		/>
		<TextView	                  
			android:id				= "@+id/cloudAll"
			style					= "@style/AD_Text"
			android:gravity			= "right"
			android:layout_width	= "30sp"
		/>
		<TextView	                  
			style					= "@style/AD_Text" 
			android:text			= "%"
			android:layout_width	= "40sp"
		/>

		<TextView
		    android:id="@+id/cloudValue"
		    style="@style/AD_Data"
			android:gravity			= "left"
		    android:layout_width="match_parent" />

	</LinearLayout>	
</LinearLayout>