# ~/.bashrc: executed by bash(1) for non-login shells.
# see /usr/share/doc/bash/examples/startup-files (in the package bash-doc)
# for examples


# If not running interactively, don't do anything
[ -z "$PS1" ] && return

# don't put duplicate lines or lines starting with space in the history.
# See bash(1) for more options
HISTCONTROL=ignoreboth

# append to the history file, don't overwrite it
shopt -s histappend

# for setting history length see HISTSIZE and HISTFILESIZE in bash(1)
HISTSIZE=1000
HISTFILESIZE=2000

# check the window size after each command and, if necessary,
# update the values of LINES and COLUMNS.
shopt -s checkwinsize

# If set, the pattern "**" used in a pathname expansion context will
# match all files and zero or more directories and subdirectories.
#shopt -s globstar

# make less more friendly for non-text input files, see lesspipe(1)
#[ -x /usr/bin/lesspipe ] && eval "$(SHELL=/bin/sh lesspipe)"

# set variable identifying the chroot you work in (used in the prompt below)
if [ -z "$debian_chroot" ] && [ -r /etc/debian_chroot ]; then
    debian_chroot=$(cat /etc/debian_chroot)
fi

# set a fancy prompt (non-color, unless we know we "want" color)
case "$TERM" in
    xterm-color) color_prompt=yes;;
esac

# uncomment for a colored prompt, if the terminal has the capability; turned
# off by default to not distract the user: the focus in a terminal window
# should be on the output of commands, not on the prompt
force_color_prompt=yes

if [ -n "$force_color_prompt" ]; then
    if [ -x /usr/bin/tput ] && tput setaf 1 >&/dev/null; then
  # We have color support; assume it's compliant with Ecma-48
  # (ISO/IEC-6429). (Lack of such support is extremely rare, and such
  # a case would tend to support setf rather than setaf.)
  color_prompt=yes
    else
  color_prompt=
    fi
fi

if [ "$color_prompt" = yes ]; then
    PS1='${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\h\[\033[00m\] \[\033[01;34m\]\w \$\[\033[00m\] '
else
    PS1='${debian_chroot:+($debian_chroot)}\u@\h:\w\$ '
fi
unset color_prompt force_color_prompt

# If this is an xterm set the title to user@host:dir
case "$TERM" in
xterm*|rxvt*)
    PS1="\[\e]0;${debian_chroot:+($debian_chroot)}\u@\h: \w\a\]$PS1"
    ;;
*)
    ;;
esac

# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    #alias dir='dir --color=auto'
    #alias vdir='vdir --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# some more ls aliases
#alias ll='ls -l'
#alias la='ls -A'
#alias l='ls -CF'

# Alias definitions.
# You may want to put all your additions into a separate file like
# ~/.bash_aliases, instead of adding them here directly.
# See /usr/share/doc/bash-doc/examples in the bash-doc package.

if [ -f ~/.bash_aliases ]; then
    . ~/.bash_aliases
fi

# enable programmable completion features (you don't need to enable
# this, if it's already enabled in /etc/bash.bashrc and /etc/profile
# sources /etc/bash.bashrc).
if [ -f /etc/bash_completion ] && ! shopt -oq posix; then
    . /etc/bash_completion
fi

if [ -x /usr/bin/numlockx ];
then
	echo numlockx not called
#   /usr/bin/numlockx on
fi

PATH=$PATH:/home/pi/Macros
alias ll='ls -l'
alias down='sudo shutdown -h now'
alias reboot='sudo shutdown -r now'
alias sjava='sudo java -cp .. -Djava.library.path="." '

#sudo modprobe w1-gpio
#sudo modprobe w1-therm

alias devices='cd /sys/bus/w1/devices/'
alias ereg='cd /home/pi/Eclipse/eRegulation/eRegulation/'
alias sbw='sudo bw_tool'
alias sbws='sudo bw_tool -S'
alias sbwaSPI='sudo bw_tool -w f0:9c -a'
alias sbwaI2C='sudo bw_tool -I -D /dev/i2c-1 -w f0:94 -a'

echo Relays are
echo  - Burner        20
echo  - MixerUp       21
echo  - MixerDown     22
echo  - Hot Water     23
echo  - Radiator      24
echo  - Floor         25

alias update='/home/pi/HVAC/eReg/_Documents/update.sh'
alias test='/home/pi/HVAC/eReg/_Documents/Test.sh'

alias burneron='sudo  	bw_tool -a 9c -w 20:1'
alias burneroff='sudo 	bw_tool -a 9c -w 20:0'
alias mixerup='sudo   	bw_tool -a 9c -w 22:0; sudo   bw_tool -a 9c -w 21:1'
alias mixerdown='sudo 	bw_tool -a 9c -w 21:0; sudo   bw_tool -a 9c -w 22:1'
alias mixeroff='sudo  	bw_tool -a 9c -w 22:0; sudo   bw_tool -a 9c -w 21:0'
alias hwon='sudo      	bw_tool -a 9c -w 23:1'
alias hwoff='sudo     	bw_tool -a 9c -w 23:0'
alias radiatoron='sudo  bw_tool -a 9c -w 24:1'
alias radiatoroff='sudo bw_tool -a 9c -w 24:0'
alias flooron='sudo   	bw_tool -a 9c -w 25:1'
alias flooroff='sudo  	bw_tool -a 9c -w 25:0'


alias tempboiler='echo boiler;sudo cat /mnt/1wire/uncached/28.1c018f040000/temperature10;echo'
alias temphw='echo hotwater;sudo     cat /mnt/1wire/uncached/28.89748e040000/temperature10;echo'
alias tempmixc='echo mixer_cold;sudo   cat /mnt/1wire/uncached/28.69da8e040000/temperature10;echo'
alias tempmixh='echo mixer_hot;sudo   cat /mnt/1wire/uncached/28.2c068e040000/temperature10;echo'
alias tempmixo='echo mixer_out;sudo   cat /mnt/1wire/uncached/28.44928e040000/temperature10;echo'
alias tempall='echo boiler;sudo cat /mnt/1wire/uncached/28.1c018f040000/temperature10;echo;echo hotwater;sudo cat /mnt/1wire/uncached/28.89748e040000/temperature10;echo;echo mixer_hot;sudo   cat /mnt/1wire/uncached/28.2c068e040000/temperature10;echo'

alias go='cd /home/pi/HVAC/eReg/eRegulation/;git stash save; git stash drop;make ex'

echo testing mount to //NAS/DropZone at /mnt/DZ
echo ==========================================
sudo cat /mnt/DZ/test
echo ==========================================

cd /home/pi/HVAC/eReg/eRegulation
